{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "tui": {
    "scroll_speed": 0.75,
  },
  "mcp": {
    "awesome-mcp": {
      "type": "remote",
      "url": "https://www.context-awesome.com/api/mcp",
      "oauth": false,
    },
    "effect": {
      "type": "local",
      "command": ["bunx", "-y", "effect-mcp"],
    },
    "svelte": {
      "type": "local",
      "command": ["bunx", "-y", "@sveltejs/mcp"],
      "enabled": false,
    },
    "answeroverflow": {
      "type": "remote",
      "url": "https://www.answeroverflow.com/mcp",
      "enabled": true,
    },
    "playwriter": {
      "type": "local",
      "command": ["bunx", "playwriter@latest"],
    },
  },
  "tools": {
    "awesome-mcp*": false,
    "svelte*": false,
  },
  "agent": {
    "dependency-evaluator": {
      "tools": {
        "awesome-mcp*": true,
      },
    },
  },
}
