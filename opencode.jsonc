{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    "awesome-mcp": {
      "type": "remote",
      "url": "https://www.context-awesome.com/api/mcp",
      "oauth": false,
    },
    "effect": {
      "type": "local",
      "command": ["bunx", "-y", "effect-mcp"],
    },
    "svelte": {
      "type": "local",
      "command": ["bunx", "-y", "@sveltejs/mcp"],
    },
    "answeroverflow": {
      "type": "remote",
      "url": "https://www.answeroverflow.com/mcp",
      "enabled": true,
    },
  },
  "tools": {
    "awesome-mcp*": false,
    "effect*": false,
    "svelte*": false,
    "answeroverflow*": false,
  },
  "agent": {
    "dependency-evaluator": {
      "tools": {
        "awesome-mcp*": true,
      },
    },
    "effect": {
      "tools": {
        "effect*": true,
        "answeroverflow*": true,
      },
    },
  },
}
